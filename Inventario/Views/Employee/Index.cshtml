@model IEnumerable<Inventario.ServiceContracts.EmployeeViewModel>





@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";

}
<div class="container">

    <div class="sample" id="editdiv">

    </div>

    <div class="container" id="addcontainer">

        @{Html.RenderAction("AddModal"); }

    </div>

<div>

    <button type="button"  style="float:right" class="btn btn-primary" id="Add" data-toggle="modal" data-target="#myModal3"><i class="fa fa-user-plus" aria-hidden="true"></i>&nbsp;&nbsp;Add Employee</button>
    <h3>Employee Hub</h3>
    <p>&nbsp;</p>
</div>
   
<table id="example" class="table table-striped table-bordered table-responsive" cellspacing="0">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Employee_ID)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Emp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_of_joining)
            </th>
            <th></th>
        </tr>
    </thead>


    <tfoot>
        <tr>
            <th>Employee ID</th>
            <th>Emp Name</th>
            <th>Designation</th>
            <th>Email ID</th>
            <th>Date of Joining</th>
          
            <td></td>
        </tr>
    </tfoot>


    <tbody>
        @foreach (var item in Model)
        {
            
                <tr>
                    <td>
                        @Html.ActionLink(item.Employee_ID, "History", new { id = item.S_No })
                    </td>
                    
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>

                        @using (Html.BeginForm("Delete", "Employee", new { id = item.S_No }))
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-default" onclick="myFunction(@item.S_No)"><span class="glyphicon glyphicon-edit"></span> Edit</button>
                        
                                <button type="submit" class="btn btn-default" onclick="return confirm('Do you want to remove the entry?' )"><span class="glyphicon glyphicon-trash"></span> Remove</button>
                         </div>       }
</td>
                </tr>

            

        }
    </tbody>
</table>
</div>

<div class="modal hide fade in" id="edit-person">
    <div id="edit-person-container"></div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

