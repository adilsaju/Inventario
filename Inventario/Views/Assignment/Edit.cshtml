@model Inventario.ServiceContracts.AssignViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div class="container" style="max-width:500px">
    
    <h2 class="text-center">Edit</h2>
   @{
        SelectList list = ViewBag.serial;
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
           
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Emp_Id, htmlAttributes: new { @class = "control-label  pmtallocated pull-left" })
                <div class="col-md-8 pull-right">
                    @Html.EditorFor(model => model.Emp_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Emp_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Device_Id, htmlAttributes: new { @class = "control-label  pmtallocated pull-left" })
                <div class="col-md-8 pull-right">
                    @Html.DropDownListFor(model => model.Device_Id, list, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Device_Id, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group" style="padding-right:16px">
               
                <div class="pull-right">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
       
        <div class="pull-right">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
