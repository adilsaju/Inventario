@model IEnumerable<Inventario.ServiceContracts.AssignmentViewModel>

@{
   
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
    
}


<div id="editdiv">

    </div>
<div class="container" id="addcontainer">

    @{Html.RenderAction("Create"); }

</div>

    <div>
        
        
        <button type="button" style="float:right" class="btn btn-primary"  data-toggle="modal" data-target="#myModal5"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Assign&nbsp;</button>
        <h3>Inventory Assignment</h3>
        <p>&nbsp;</p>
    </div>

    

    <table id="example" class="table table-striped table-bordered table-responsive" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.device_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Serial_No)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device_type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.emp_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.employee_name)
                </th>

                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Device id</th>
                <th>Serial No</th>
                <th>Device Type</th>
                <th>Device name</th>
                <th>Emp Id</th>
                <th>emp name</th>
                <td></td>
            </tr>
        </tfoot>

        <tbody>
            @foreach (var item in Model)
            {
               
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.device_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Serial_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device_type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.emp_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.employee_name)
                        </td>
                        
                        <td>
                            @using (Html.BeginForm("Delete", "Assignment", new { id = item.S_No }))
                            { <div class="btn-group">
                                <button type="button" class="btn btn-default" onclick="myFunction(@item.S_No)"><span class="glyphicon glyphicon-edit"></span> Edit</button>

                                <button type="submit" class="btn btn-default" onclick="return confirm('Do you want to remove the entry?' )"><span class="glyphicon glyphicon-trash"></span> Remove</button>                    </div>        }
</td>
                    </tr>
            }
        </tbody>

    </table>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

