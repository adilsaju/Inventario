@model Inventario.ServiceContracts.AssignViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_layout.cshtml";

}
@{
    SelectList list = ViewBag.serial;
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".devid").select2();
        });
    </script>


</head>
<body>
    <div class="container" style="max-width:500px">
        <h2 class="text-center">Assign</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Emp_Id, htmlAttributes: new { @class = "control-label  pmtallocated pull-left" })
                    <div class="col-md-8 pull-right">
                        @Html.EditorFor(model => model.Emp_Id, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @id = "EmployeeName" } })
                        @Html.ValidationMessageFor(model => model.Emp_Id, "", new { @class = "text-danger" })
                    </div>
                </div>





                <div class="form-group">
                    @Html.LabelFor(model => model.Device_Id, htmlAttributes: new { @class = "control-label  pmtallocated pull-left" })
                    <div class="col-md-8 pull-right">
                        @Html.DropDownListFor(model => model.Device_Id, list, new { @class = "form-control devid" })
                        @Html.ValidationMessageFor(model => model.Device_Id, "", new { @class = "text-danger" })
                    </div>
                </div>






                <div class="form-group" style="padding-right:16px">

                    <div class="pull-right">
                        <input type="submit" value="Assign" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>

            <div class="pull-right">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/npm.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/table.js"></script>

    

    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".devid").select2();
        });
    </script>

</body>